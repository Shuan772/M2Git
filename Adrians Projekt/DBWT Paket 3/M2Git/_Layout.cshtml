<!DOCTYPE html>
<html lang="de">
<head>
    <title>@Page.Title</title>
    @*RenderSection("head", required: false)*@
    <link href="Bootstrap/bootstrap-4.1.3-dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <link href="StyleSheet.css" rel="stylesheet">
    <meta charset="utf-8" />
</head>
<body>
    <div class="offset-1 container-fluid col-10">
        <header>
            <div class="row">
                <div class="col-2">
                    <h1> e-Mensa </h1>
                </div>

                <nav class="col-8">
                    <ul class="nav">
                        <li class="nav-item"><a class="nav-link" href="/M2Git/Start.cshtml">Start</a> </li>
                        <li class="nav-item"><a class="nav-link" href="/M2Git/Produkte.cshtml">Mahlzeiten</a> </li>
                        <li class="nav-item"><a class="nav-link active" href="#">Bestellungen</a></li>
                        <li class="nav-item"><a class="nav-link" href="https://www.fh-aachen.de/" target="_blank">Fh-Aachen</a> </li>
                    </ul>
                </nav>
                <div class="col-2 headerAllign">
                    <form method="get" action="http://www.google.com/search">
                        <i class="fas fa-search">
                        <input type="search" name="q" placeholder="" />
                        </i>
                        <!-- --><button type="submit">Suchen</button>
                        <input type="hidden" name="sitesearch" value="www.fh-aachen.de" />
                    </form>
                </div>
            </div>
            <!--<div class="hr1"></div>-->
            <div> <hr /> </div>
        </header>

        @RenderBody()

        @RenderSection("head", false)

        @*RenderSection("script", required: false)*@
        <footer>
            <div> <hr /> </div>
            <div class="row">

                <div class="col-2">
                    <p> (c) 2017 DBWT </p>
                </div>
                @{
                    var curTime = DateTime.Now;

                }
                <nav class="col-8">
                    <ul class="nav">
                        <li class="nav-item"><a class="nav-link" href="#">Login</a> </li>
                        <li class="nav-item"><a class="nav-link" href="#">Registrieren</a> </li>
                        <li class="nav-item"><a class="nav-link active" href="/M2Git/Zutaten.cshtml">Zutatenliste</a></li>
                        <li class="nav-item"><a class="nav-link" href="/M2Git/Impressum.cshtml">Impressum</a> </li>
                        <li class="nav-item">Zeit: @curTime</li>
                    </ul>
                </nav>
            </div>
        </footer>
    </div>
</body>
</html>



